<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"

        android:layout_marginTop="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:background="@drawable/background_gradient"

        tools:context=".ui.main.playcontrol.PlayControlFragment">

    <com.gigamole.library.ShadowLayout
            android:id="@+id/play_pause_btn_layout"
            android:layout_marginTop="204dp"
            android:layout_marginStart="136dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"

            app:sl_shadowed="true"
            app:sl_shadow_angle="45"
            app:sl_shadow_radius="2dp"
            app:sl_shadow_distance="2dp"
            app:sl_shadow_color="#88000000">

        <ImageButton
                android:id="@+id/play_pause_btn"
                android:text="@string/play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_play_btn"
                android:background="@drawable/circle_play_button"/>
    </com.gigamole.library.ShadowLayout>

    <Button
            android:text="@string/stop_service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/stop_service_btn" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toBottomOf="@+id/play_pause_btn_layout" android:layout_marginTop="84dp"/>

    <Button
            android:text="@string/preferences"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pref_btn" android:layout_marginTop="12dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"/>
    <Button
            android:text="@string/open_folder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/open_folder_btn" android:layout_marginTop="12dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"/>
    <Button
            android:text="Clear Playlist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/clear_song_list_btn"
            app:layout_constraintTop_toTopOf="@+id/stop_service_btn" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"/>
    <TextView
            android:text="Выберите композицию"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/active_song_title"
            app:layout_constraintStart_toStartOf="@+id/play_pause_btn_layout"
            app:layout_constraintEnd_toEndOf="@+id/play_pause_btn_layout"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/play_pause_btn_layout"
            app:layout_constraintHorizontal_bias="0.473"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/pref_btn"
            android:textStyle="italic"
            android:textSize="18sp"
            app:layout_constraintVertical_bias="1.0"/>
    <Button
            android:text="Previous"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/previous_btn" app:layout_constraintEnd_toStartOf="@+id/play_pause_btn_layout"
            android:layout_marginEnd="20dp" android:layout_marginTop="28dp"
            app:layout_constraintTop_toTopOf="@+id/play_pause_btn_layout"/>
    <Button
            android:text="Next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/next_btn" app:layout_constraintStart_toEndOf="@+id/play_pause_btn_layout"
            android:layout_marginStart="20dp" android:layout_marginTop="28dp"
            app:layout_constraintTop_toTopOf="@+id/play_pause_btn_layout"/>

</androidx.constraintlayout.widget.ConstraintLayout>
