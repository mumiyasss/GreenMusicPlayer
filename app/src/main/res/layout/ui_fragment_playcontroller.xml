<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_gradient"
        tools:context=".ui.main.playcontrol.PlayControlFragment">

    <com.gigamole.library.ShadowLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="76dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="76dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.481"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/play_pause_btn_layout"
            app:layout_constraintVertical_bias="0.124"
            android:id="@+id/shadowLayout2">

        <ImageView
                android:elevation="4dp"
                android:background="@drawable/album_background"
                android:padding="13dp"
                android:src="@drawable/ic_music_symbol"
                android:layout_width="260dp"
                android:layout_height="260dp"
                android:id="@+id/imageView"/>
    </com.gigamole.library.ShadowLayout>

    <com.gigamole.library.ShadowLayout
            android:id="@+id/play_pause_btn_layout"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="116dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.177"

            app:sl_shadowed="true"
            app:sl_shadow_angle="45"
            app:sl_shadow_radius="3dp"
            app:sl_shadow_distance="3dp"
            app:sl_shadow_color="#88000000"
            android:layout_marginBottom="68dp"
            app:layout_constraintBottom_toBottomOf="parent">

        <ImageButton
                android:id="@+id/play_pause_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_play_btn"
                android:background="@drawable/circle_play_button"/>
    </com.gigamole.library.ShadowLayout>

    <com.gigamole.library.ShadowLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/play_pause_btn_layout"
            android:layout_marginStart="20dp" android:layout_marginTop="28dp"
            app:layout_constraintTop_toTopOf="@+id/play_pause_btn_layout"

            app:sl_shadowed="true"
            app:sl_shadow_angle="45"
            app:sl_shadow_radius="3dp"
            app:sl_shadow_distance="3dp"
            app:sl_shadow_color="#88000000">

        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_next_btn"
                android:background="@drawable/circle_next_prev_button"

                android:id="@+id/next_btn"/>

    </com.gigamole.library.ShadowLayout>

    <com.gigamole.library.ShadowLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toStartOf="@+id/play_pause_btn_layout"
            android:layout_marginEnd="20dp" android:layout_marginTop="28dp"
            app:layout_constraintTop_toTopOf="@+id/play_pause_btn_layout"

            app:sl_shadowed="true"
            app:sl_shadow_angle="45"
            app:sl_shadow_radius="3dp"
            app:sl_shadow_distance="3dp"
            app:sl_shadow_color="#88000000">

        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_prev_btn"
                android:background="@drawable/circle_next_prev_button"
                android:id="@+id/previous_btn"/>
    </com.gigamole.library.ShadowLayout>

    <TextView
            android:text="Выберите композицию"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/active_song_title"
            app:layout_constraintStart_toStartOf="@+id/play_pause_btn_layout"
            app:layout_constraintEnd_toEndOf="@+id/play_pause_btn_layout"
            android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toTopOf="@+id/play_pause_btn_layout"
            app:layout_constraintHorizontal_bias="0.493"
            android:textStyle="italic"
            android:textSize="18sp"
    />
    <SeekBar
            android:layout_width="280dp"
            android:layout_height="18dp"
            android:id="@+id/seekBar"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/active_song_title"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="56dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="56dp"
            app:layout_constraintHorizontal_bias="0.375"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/shadowLayout2"/>
    <TextView
            android:text="1:44"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            app:layout_constraintEnd_toStartOf="@+id/seekBar"
            app:layout_constraintTop_toTopOf="@+id/seekBar"/>
    <TextView
            android:text="3:52"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:id="@+id/textView2"
            app:layout_constraintTop_toTopOf="@+id/seekBar"
            app:layout_constraintStart_toEndOf="@+id/seekBar"
    />

</androidx.constraintlayout.widget.ConstraintLayout>
