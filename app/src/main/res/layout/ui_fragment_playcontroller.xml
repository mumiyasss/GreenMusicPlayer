<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_gradient"
        tools:context=".ui.main.playcontrol.PlayControlFragment">

    <com.gigamole.library.ShadowLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="76dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="76dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="30dp" app:layout_constraintBottom_toTopOf="@+id/seek_bar">

        <ImageView
                android:elevation="4dp"
                android:background="@drawable/album_background"
                android:padding="13dp"
                android:src="@drawable/ic_music_symbol"
                android:layout_width="240dp"
                android:layout_height="240dp"
                android:id="@+id/imageView"/>
    </com.gigamole.library.ShadowLayout>

    <com.gigamole.library.ShadowLayout
            android:id="@+id/play_pause_btn_layout"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginEnd="144dp"
            app:layout_constraintEnd_toEndOf="parent"

            app:sl_shadowed="true"
            app:sl_shadow_angle="45"
            app:sl_shadow_radius="3dp"
            app:sl_shadow_distance="3dp"
            app:sl_shadow_color="#88000000"
            android:layout_marginBottom="52dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="144dp"
            app:layout_constraintStart_toStartOf="parent">

        <ImageButton
                android:id="@+id/play_pause_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_play_btn"
                android:background="@drawable/circle_play_button"/>

    </com.gigamole.library.ShadowLayout>

    <com.gigamole.library.ShadowLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/play_pause_btn_layout"
            android:layout_marginStart="20dp" android:layout_marginTop="28dp"
            app:layout_constraintTop_toTopOf="@+id/play_pause_btn_layout"

            app:sl_shadowed="true"
            app:sl_shadow_angle="45"
            app:sl_shadow_radius="3dp"
            app:sl_shadow_distance="3dp"
            app:sl_shadow_color="#88000000" android:id="@+id/shadowLayout">

        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_next_btn"
                android:background="@drawable/circle_next_prev_button"

                android:id="@+id/next_btn"/>

    </com.gigamole.library.ShadowLayout>

    <com.gigamole.library.ShadowLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toStartOf="@+id/play_pause_btn_layout"
            android:layout_marginEnd="20dp" android:layout_marginTop="28dp"
            app:layout_constraintTop_toTopOf="@+id/play_pause_btn_layout"

            app:sl_shadowed="true"
            app:sl_shadow_angle="45"
            app:sl_shadow_radius="3dp"
            app:sl_shadow_distance="3dp"
            app:sl_shadow_color="#88000000" android:id="@+id/shadowLayout2">

        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_prev_btn"
                android:background="@drawable/circle_next_prev_button"
                android:id="@+id/previous_btn"/>
    </com.gigamole.library.ShadowLayout>

    <TextView
            android:text="Выберите композицию"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/active_song_title"
            app:layout_constraintStart_toStartOf="@+id/play_pause_btn_layout"
            app:layout_constraintEnd_toEndOf="@+id/play_pause_btn_layout"

            android:fontFamily="Arial"
            android:textStyle="bold"
            android:textColor="#000"
            android:textSize="25sp"
            android:layout_marginBottom="216dp"
            app:layout_constraintBottom_toBottomOf="parent"
    />
    <SeekBar
            android:layout_width="300dp"
            android:layout_height="18dp"
            android:id="@+id/seek_bar"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/active_song_title"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="56dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="56dp"/>
    <TextView
            android:text="0:00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/how_long_is_playing"
            app:layout_constraintEnd_toStartOf="@+id/seek_bar"
            app:layout_constraintTop_toTopOf="@+id/seek_bar"

            android:textSize="12sp"
            android:textColor="#000"
            app:layout_constraintBottom_toBottomOf="@+id/seek_bar"/>
    <TextView
            android:text="0:00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/active_song_duration"
            app:layout_constraintTop_toTopOf="@+id/seek_bar"
            app:layout_constraintStart_toEndOf="@+id/seek_bar"

            android:textSize="12sp"
            android:textColor="#000"
            app:layout_constraintBottom_toBottomOf="@+id/seek_bar"/>
    <TextView
            android:text="No Artist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/active_song_artist"
            app:layout_constraintEnd_toEndOf="@+id/active_song_title"
            app:layout_constraintStart_toStartOf="@+id/active_song_title"

            android:fontFamily="Arial"
            android:textStyle="normal"
            android:textColor="#000"
            android:textSize="18sp"
            app:layout_constraintHorizontal_bias="0.502"
            android:layout_marginBottom="12dp" app:layout_constraintBottom_toTopOf="@+id/play_pause_btn_layout"/>
    <ImageView
            android:src="@drawable/ic_repeat_disabled"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/repeat_btn"
            app:layout_constraintEnd_toStartOf="@+id/play_pause_btn_layout"
            app:layout_constraintTop_toBottomOf="@+id/play_pause_btn_layout"/>
    <ImageView
            android:src="@drawable/ic_shuffle_disabled"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/shuffle_btn"
            app:layout_constraintTop_toBottomOf="@+id/play_pause_btn_layout"
            app:layout_constraintStart_toEndOf="@+id/play_pause_btn_layout"/>

</androidx.constraintlayout.widget.ConstraintLayout>
