<vector
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:width="@dimen/play_pause_btn_size"
        android:height="@dimen/play_pause_btn_size"
        android:viewportWidth="128"
        android:viewportHeight="128">

    <group android:name="whole_button">
        <path android:fillColor="#43A047" android:fillType="nonZero"
              android:pathData="M64,64m-64,0a64,64 0,1 1,128 0a64,64 0,1 1,-128 0"
              android:strokeColor="#00000000" android:strokeWidth="1"/>

        <group
                android:name="play_icon_group_parts"
                android:pivotX="64"
                android:pivotY="64"
                android:scaleX="1"
                android:scaleY="1">

            <group android:name="play_icon_group_top">
                <path
                        android:name="play_icon_top_path_name"
                        android:pathData="@string/play_icon_upper_path_data"
                        android:fillColor="#FFF"
                        android:strokeLineCap="butt"
                        android:strokeLineJoin="miter"
                        android:strokeMiterLimit="10"/>
            </group>
            <group android:name="play_icon_group_bottom">
                <path
                        android:name="play_icon_bottom_path_name"
                        android:pathData="@string/play_icon_bottom_path_data"
                        android:fillColor="#FFF"
                        android:strokeLineCap="butt"
                        android:strokeLineJoin="miter"
                        android:strokeMiterLimit="10"/>
            </group>
        </group>
    </group>
</vector>